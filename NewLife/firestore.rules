rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Temporary permissive rules for initial setup
    // TODO: Restrict these rules once authentication is properly configured
    
    // Users collection
    match /users/{userId} {
      allow read, write: if true; // Temporarily allow all access
    }
    
    // Events collection
    match /events/{eventId} {
      allow read: if true; // Public read access
      allow write: if true; // Temporarily allow all writes for testing
    }
    
    // Attendance collection
    match /attendance/{attendanceId} {
      allow read, write: if true; // Temporarily allow all access
    }
    
    // News collection
    match /news/{newsId} {
      allow read, write: if true; // Temporarily allow all access
    }
    
    // Allow access to any other collections that might be created
    match /{document=**} {
      allow read, write: if true;
    }
  }
} 